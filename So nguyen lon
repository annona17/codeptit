/*
day con chung dai nhat 
    a. muc tieu : do dai cua day con chung 
        -> c[n][m] : 
    b. khoi dau : c[0][i] = c[i][0] = 0; 
    c. cong thuc truy hoi : TÃ­nh c[i][j] voi i> 0, j >0
    d. s1[i] = s2[j]  -> c[i][j] = c[i-1][j-1] + 1
       s1[i] != s2[j] -> C[I][J] = MAX(c[i-1][j], c[i][j-1]); 
 */ 
//na
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int c[1005][1005]; 
int Solve(string s1, string s2){
    memset(c, 0, sizeof(c)); 
    int n = s1.length(), m = s2.length(); 
    for (int i = 1; i<=n; i++){
        for (int j = 1; j<=m; j++){
            if (s1[i-1] == s2[j-1]) c[i][j] = c[i-1][j-1]+1; 
            else c[i][j] = max(c[i-1][j], c[i][j-1]); 
        }
    }
    return c[n][m]; 
}
int main(){
    int t = 0;
    cin >> t;
    while (t--){
        string s1, s2; 
        cin >> s1 >> s2; 
        cout << Solve(s1, s2) << endl; 
    }
    return 0;
}
