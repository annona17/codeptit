#include<bits/stdc++.h>

using namespace std;
#define ll long long int
bool comp( const int a, const int b){
    return a>b; 
}
int main(){
    int t = 0;
    cin >> t;
    while (t--){
        int n = 0, x = 0, tmp; 
        cin >> n >> x; 
        int a[100005] = {}; 
        for (int i = 0; i<n; i++) cin >> a[i] ; 
        int dem = 0; 
        for (int i = 0; i< n; i++){
            if( a[i] == x) dem++; 
        } 
        if (dem == 0) cout << "-1" << endl; 
        else cout << dem << endl; 
    }
    return 0;
}
