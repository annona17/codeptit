//na
#include<bits/stdc++.h>

using namespace std;
#define ll long long int

int main(){
    int t = 0;
    cin >> t;
    while (t--){
        int n = 0; 
        cin >> n; 
        int a[100005] = {}; 
        int dem = 0; 
        for (int i = 0; i<n; i++){
            cin >> a[i]; 
            if (a[i] == 0) dem++; 
        }
        cout << dem << endl; 
    }
    return 0;
}
